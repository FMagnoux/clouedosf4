{% extends "base.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="well well-sm">
                <div class="row">
                    <div class="col-sm-6 col-md-4">
                        <img src="http://placehold.it/380x500" alt="" class="img-rounded img-responsive" />
                    </div>
                    <div class="col-sm-6 col-md-8">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-3"></div>
                            {{ form_errors(form.email, { 'attr': {'class': 'form-control col-md-5'}}) }}
                            {{ form_widget(form.email, { 'attr': {'class': 'form-control col-md-5','placeholder':'Adresse Email'}}) }}
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-md-3"></div>
                            {{ form_errors(form.password.first, { 'attr': {'class': 'form-control col-md-5'}}) }}
                            {{ form_widget(form.password.first, { 'attr': {'class': 'form-control col-md-5','placeholder':'Nouveau mot de passe'} }) }}
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-md-3"></div>
                            {{ form_errors(form.password.second, { 'attr': {'class': 'form-control col-md-5 '}}) }}
                            {{ form_widget(form.password.second, { 'attr': {'class': 'form-control col-md-5','placeholder':'Confirmer mot de passe'} }) }}
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-md-3"></div>
                            {{ form_widget(form.update, { 'attr': {'class': 'btn btn-lg btn-primary btn-block col-md-5'} }) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


