{% extends "base_admin.html.twig" %}

{% block body %}
    {% if tasks %}
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h4>Tâches</h4>
                    <div class="table-responsive">
                        <table id="mytable" class="table table-bordred table-striped">
                            <thead>
                            <th style="color: white; text-align: center">Nom</th>
                            <th style="color: white; text-align: center">Description</th>
                            <th style="color: white; text-align: center">Active</th>
                            <th style="color: white; text-align: center"></th>
                            <th style="color: white; text-align: center"></th>
                            <th style="color: white; text-align: center"></th>
                            </thead>
                            <tbody>
                            {% for task in tasks %}
                                <tr style="background-color: white">
                                    <td style="text-align: center">{{ task.name }}</td>
                                    <td style="text-align: center">{{ task.description }}</td>
                                    {% if task.activate %}
                                        <td style="text-align: center">Oui</td>
                                    {% else %}
                                        <td style="text-align: center">Non</td>
                                    {% endif %}
                                    {% if task.activate %}
                                        <td><p data-placement="top" data-toggle="tooltip" title="Voir"><a href="{{ path(task.path) }}"><button class="btn btn-success btn-xs" data-title="Voir" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-eye-open"></span></button></a></p></td>
                                        <td><p data-placement="top" data-toggle="tooltip" title="Modifier"><a href="{{ path('app_admin_update_task', { 'id': task.id }) }}"><button class="btn btn-primary btn-xs" data-title="Modifier" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-pencil"></span></button></a></p></td>
                                        <td><p data-placement="top" data-toggle="tooltip" title="Supprimer"><a href="{{ path('app_admin_delete_task', { 'id': task.id }) }}"><button class="btn btn-danger btn-xs" data-title="Supprimer" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-trash"></span></button></a></p></td>
                                    {% else %}
                                        <td><p data-placement="top" data-toggle="tooltip" title="Configurer"><a href="{{ path('app_admin_update_task', { 'id': task.id }) }}"><button class="btn btn-primary btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-wrench"></span></button></a></p></td>
                                        <td></td>
                                        <td></td>
                                    {% endif %}
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="row justify-content-center">
            <div class="col-md-2"></div>
            <div class="col-md-8 mt-3">
                <div class="jumbotron ">
                    <h1 class="display-4" style="text-align: center">Pas de tâches</h1>
                    <p class="lead" style="text-align: center">Aucune tâche n'est créer</p>
                    <hr class="my-4" style="text-align: center">
                    <p style="text-align: center">Ajouter une tâche pour compléter votre espace d'administration</p>
                    <p class="lead" style="text-align: center">
                        <a class="btn btn-primary btn-lg" href="{{ path('app_admin_add_task') }}" role="button">Ajouter une tâche</a>
                    </p>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
