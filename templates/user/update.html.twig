{% extends "base.html.twig" %}

{% block body %}
    <section id="contact" class="content-section text-center">
        <div class="contact-section">
            <div class="container">
                <h2>Modification</h2>
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label for="exampleInputName2">Email</label>
                                {{ form_widget(form.email, { 'attr': {'class': 'form-control col-md-4','placeholder':'Adresse Email'}}) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail2">Mot de passe</label>
                                {{ form_widget(form.password.first, { 'attr': {'class': 'form-control col-md-5','placeholder':'Nouveau mot de passe'} }) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail2">Confirmation mot de passe</label>
                                {{ form_widget(form.password.second, { 'attr': {'class': 'form-control col-md-5','placeholder':'Confirmer mot de passe'} }) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail2">Photo</label>
                                {{ form_row(form.fileprofil) }}
                            </div>
                            <br><br>
                            <div class="form-group ">
                                <label for="exampleInputText"></label>
                                {{ form_widget(form.update, { 'attr': {'class': 'btn btn-lg btn-primary btn-block col-md-5'} }) }}
                            </div>
                            {{ form_row(form._token) }}
                        </form>
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}


