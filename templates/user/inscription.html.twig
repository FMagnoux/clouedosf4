{% extends "base.html.twig" %}

{% block body %}
    {{ form_start(form) }}
    <section id="contact" class="content-section text-center">
        <div class="contact-section">
            <div class="container">
                <h2>Inscription</h2>
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label for="exampleInputName2">Email</label>
                                {{ form_widget(form.email, { 'attr': {'class': 'form-control col-md-4','placeholder':'Adresse Email'}}) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail2">Mot de passe</label>
                                {{ form_widget(form.password, { 'attr': {'class': 'form-control col-md-4','placeholder':'Mot de passe'} }) }}
                            </div>
                            <div class="form-group ">
                                <label for="exampleInputText">Pseudo</label>
                                <div>{{ form_widget(form.pseudo, { 'attr': {'class': 'form-control col-md-4','placeholder':'Pseudo'} }) }}</div>
                            </div>
                            <br><br>
                            <div class="form-group ">
                                <label for="exampleInputText"></label>
                                {{ form_widget(form.save, { 'attr': {'class': 'btn btn-lg btn-primary btn-block col-md-4'} }) }}
                            </div>
                            <div class="row">
                                <div class="col-md-4"></div>
                                <br>
                                <a href="{{ path('app_validation_not_send') }}">Je n'ai pas re√ßu mon email de validation</a>
                            </div>
                            {{ form_row(form._token) }}
                        </form>
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {{ form_end(form) }}
{% endblock %}


