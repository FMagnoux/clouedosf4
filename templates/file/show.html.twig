{% extends "base.html.twig" %}
{% block body %}
    {% if files %}
        {% for file in files %}
            <div class="album py-5 bg-light">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card mb-4 box-shadow">
                                <img class="card-img-top" src="../../public/images/fichier.jpg" alt="Card image cap">
                                <div class="card-body">
                                    <p class="card-text">Nom: {{ file.name }}</p>
                                    <p class="card-text">Taille: {{ file.size }}</p>
                                    <p class="card-text">Dernière modification: {{ file.dateUpdate|date('d/m/Y') }}</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <a href="{{ path('app_file_update', { 'id': file.id }) }}">Modifier<button type="button" class="btn btn-sm btn-outline-secondary"></button></a>
                                            <a href="{{ path('app_file_delete', { 'id': file.id }) }}">Supprimer<button type="button" class="btn btn-sm btn-outline-danger"></button></a>
                                        </div>
                                        <small class="text-muted">Ajouté le {{ file.dateAdd|date('d/m/Y') }}</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <div class="row justify-content-center">
            <div class="col=12 mt-3">
                <div class="jumbotron ">
                    <h1 class="display-4">Pas de fichier</h1>
                    <p class="lead">Pourquoi laisser l'espace vide alors que vous avez plein de place :)</p>
                    <hr class="my-4">
                    <p>Ajouter un ou plusieurs fichiers pour compléter votre espace</p>
                    <p class="lead">
                        <a class="btn btn-primary btn-lg" href="{{ path('app_upload') }}" role="button">Ajouter un fichier</a>
                    </p>
                </div>
            </div>
        </div>
        </div>


    {% endif %}
{% endblock %}


