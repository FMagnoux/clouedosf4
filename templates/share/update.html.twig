{% extends "base.html.twig" %}

{% block body %}
    {{ form_start(form) }}
    <h1 class="h3 mb-3 font-weight-normal" style="text-align: center">Modifier une relation</h1>
    <div class="row">
        <div class="col-md-4"></div>
        {% if errorTime is defined %}
            <div style="color: red">{{ errorTime }}</div>
        {% else %}
            <div>Date de fin de la relation</div>
        {% endif %}
    </div>
    <div class="row">
        <div class="col-md-4"></div>
        {{ form_widget(form.life, { 'attr': {'class': 'col-md-4'} }) }}
    </div>
    <br>
    {% if form.deletepassword is defined  %}
        <div class="row">
            <div class="col-md-4"></div>
            <div>{{ form_label(form.deletepassword, { 'attr': {'class': 'form-control col-md-4'} }) }}</div>
        </div>
        <div class="row">
            <div class="col-md-4"></div>
            {{ form_widget(form.deletepassword, { 'attr': {'class': 'form-control col-md-4'} }) }}
        </div>
        <br>
    {%  endif %}
    <div class="row">
        <div class="col-md-4"></div>
        <div>Mot de passe (optionnel)</div>
    </div>
    <div class="row">
        <div class="col-md-4"></div>
        {{ form_widget(form.password, { 'attr': {'class': 'form-control col-md-4'} }) }}
    </div>
    <br>
    <div class="row">
        <div class="col-md-4"></div>
        {{ form_widget(form.update, { 'attr': {'class': 'btn btn-lg btn-primary btn-block col-md-4'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}


