{% extends "base.html.twig" %}
{% block body %}
    {{ form_start(form) }}
    <h1 class="h3 mb-3 font-weight-normal" style="text-align: center">Ajouter un fichier</h1>
    <div class="row">
        <div class="col-md-4"></div>
        {{ form_errors(form.name, { 'attr': {'class': 'form-control col-md-4'}}) }}
        {{ form_widget(form.name, { 'attr': {'class': 'form-control col-md-4','placeholder':'Nom du fichier'}}) }}
    </div>
    <br>
    <div class="row">
        {{ form_widget(form.fileupload) }}
    </div>
    <div class="row">
        <div class="col-md-4"></div>
        {{ form_widget(form.upload, { 'attr': {'class': 'btn btn-lg btn-primary btn-block col-md-4'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}


