{% block head_css %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

{% endblock %}
{% block head_js %}
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>{% endblock %}

{% if errors %}
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4" style="color: red; text-align: center">{{ errors }}</div>
    </div>
{% endif %}

{{ form_start(form) }}
<h1 class="h3 mb-3 font-weight-normal" style="text-align: center">Connexion</h1>
<div class="row">
    <div class="col-md-4"></div>
    {{ form_widget(form.email, { 'attr': {'class': 'form-control col-md-4','placeholder':'Adresse Email'}}) }}
</div>
<br>
<div class="row">
    <div class="col-md-4"></div>
    {{ form_widget(form.password, { 'attr': {'class': 'form-control col-md-4 ','placeholder':'Mot de passe'}}) }}
</div>
<br>
<div class="row">
    <div class="col-md-4"></div>
    {{ form_widget(form.login, { 'attr': {'class': 'btn btn-lg btn-primary btn-block col-md-4'} }) }}
</div>

{{ form_end(form) }}


