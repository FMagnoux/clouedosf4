{% extends "base_admin.html.twig" %}
{% block body %}

    {{ form_start(form) }}
    <section id="contact" class="content-section text-center">
        <div class="contact-section">
            <div class="container">
                <h2>Tâche</h2>
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label for="exampleInputName2">Nom</label>
                                {{ form_widget(form.name, { 'attr': {'class': 'form-control col-md-4','placeholder':'Nom de la tâche'} }) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail2">Description</label>
                                {{ form_widget(form.description, { 'attr': {'class': 'form-control col-md-4','placeholder':'Description'} }) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail2">Chemin</label>
                                {{ form_widget(form.path, { 'attr': {'class': 'form-control col-md-4','placeholder':'Ex: app_xxx_xxx'} }) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail2"></label>
                            </div>
                            <div class="form-group ">
                                <label for="exampleInputText"></label>
                                {{ form_widget(form.add, { 'attr': {'class': 'btn btn-lg btn-primary btn-block col-md-4'} }) }}
                            </div>
                            {{ form_row(form._token) }}
                        </form>
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {{ form_end(form) }}
{% endblock %}