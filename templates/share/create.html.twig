{% extends "base.html.twig" %}

{% block body %}
    {{ form_start(form) }}
    <section id="contact" class="content-section text-center">
        <div class="contact-section">
            <div class="container">
                <h2>Relation</h2>
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label for="exampleInputName2">Utilisateur</label>
                                {{ form_widget(form.user, { 'attr': {'class': 'form-control col-md-4'}}) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail2">Mot de passe (optionnel)</label>
                                {{ form_widget(form.password, { 'attr': {'class': 'form-control col-md-4','placeholder':'Mot de passe'} }) }}
                            </div>
                            <div class="form-group ">
                                <label for="exampleInputEmail2">Date de fin</label><br>
                                {{ form_widget(form.life, { 'attr': {'class': 'col-md-4'} }) }}
                            </div>
                            <br><br>
                            <div class="form-group ">
                                <label for="exampleInputText"></label>
                                {{ form_widget(form.create, { 'attr': {'class': 'btn btn-lg btn-primary btn-block col-md-4'} }) }}
                            </div>
                            {{ form_row(form._token) }}
                        </form>
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {{ form_end(form) }}
{% endblock %}


