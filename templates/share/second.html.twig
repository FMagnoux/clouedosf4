{% extends "base.html.twig" %}
{% block body %}
    {% if shares %}
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h4>Mes partages non propriétaires</h4>
                    <div class="table-responsive">
                        <table id="mytable" class="table table-bordred table-striped">
                            <thead>
                            <th style="color: white; text-align: center">Qui</th>
                            <th style="color: white; text-align: center">Jusqu'au</th>
                            <th style="color: white; text-align: center">Mot de passe</th>
                            <th style="color: white; text-align: center"></th>
                            </thead>
                            <tbody>
                            {% for share in shares %}
                                <tr style="background-color: white">
                                    <td style="text-align: center">{{ share.user.pseudo }}</td>
                                    <td style="text-align: center">{{ share.life|date('d/m/Y') }}</td>
                                    {% if share.password %}
                                        <td style="text-align: center">Oui</td>
                                    {% else %}
                                        <td style="text-align: center">Non</td>
                                    {% endif %}
                                    <td><p data-placement="top" data-toggle="tooltip" title="Télécharger"><a href="{{ path('app_space_show', { 'id': share.space.id }) }}"><button class="btn btn-primary btn-xs" data-title="Voir" data-toggle="modal" data-target="#edit" ><span class="glyphicon glyphicon-eye-open"></span></button></a></p></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="row justify-content-center">
            <div class="col-md-2"></div>
            <div class="col-md-8 mt-3">
                <div class="jumbotron ">
                    <h1 class="display-4" style="text-align: center">Espace partagés</h1>
                    <p class="lead" style="text-align: center">Personne ne partage son espace avec vous</p>
                    <hr class="my-4" style="text-align: center">
                    <p style="text-align: center">Demandez à vos amis de partager leur espaces avec vous</p>
                    <p class="lead" style="text-align: center">
                    </p>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}


