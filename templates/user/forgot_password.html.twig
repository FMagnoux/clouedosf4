{% extends "base.html.twig" %}

{% block body %}
    {{ form_start(form) }}
    <h1 class="h3 mb-3 font-weight-normal" style="text-align: center">Récupération de mot de passe</h1>
    {% if error is defined %}
        <div class="row">
            <div class="col-md-4"></div>
            <div style="color: red">{{ error }}</div>
        </div>
    {% endif %}
    <div class="row">
        <div class="col-md-4"></div>
        <div>{{ form_errors(form.email) }}</div>
    </div>
    <div class="row">
        <div class="col-md-4"></div>
        {{ form_widget(form.email, { 'attr': {'class': 'form-control col-md-4','placeholder':'Adresse Email'}}) }}
    </div>
    <br>
    <div class="row">
        <div class="col-md-4"></div>
        {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-lg btn-primary btn-block col-md-4'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}


